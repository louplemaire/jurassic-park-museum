*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

.landing
    width 100%
    height 100%
    background-color #c4c4c4
    z-index: 2

    .front
        width 60%
        height 100%
        margin 0 auto
        text-align: center
        display flex
        flex-direction column
        justify-content center
        align-items space-between
        opacity 1

        h1
            font-size: 60px

        a
            text-decoration none
            font-size 30px

.popUpInformation
    position: absolute
    top 20%
    left 35%
    width 30%
    height auto
    border-radius 5%
    background-color #fff
    padding 2%
    
    h2
        text-align center
        font-size 40px
        margin-bottom 5%

    p
        text-align center
        font-size: 25px


.isVisible
    display none